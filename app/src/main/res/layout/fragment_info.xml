<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test Süreci"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"
        android:textColor="@color/design_default_color_primary" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bu uygulama adım adım test sürecini yönetir. Aşağıdaki testleri sırasıyla tamamlamanız gerekmektedir:"
        android:textSize="16sp"
        android:layout_marginBottom="24dp"
        android:gravity="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. LED Testi\n2. Kanat Testi\n3. Çatı Testi"
        android:textSize="16sp"
        android:layout_marginBottom="32dp"
        android:textStyle="bold"
        android:gravity="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Her test tamamlandıktan sonra durumu 'Tamamlandı' olarak işaretlenecektir. Tüm testler tamamlandığında özet sayfasında 'Testi Bitir' butonunu aktif hale gelecektir."
        android:textSize="14sp"
        android:layout_marginBottom="48dp"
        android:gravity="center" />

    <Button
        android:id="@+id/btnStartTest"
        android:layout_width="200dp"
        android:layout_height="56dp"
        android:text="Teste Başla"
        android:textSize="16sp"
        android:textStyle="bold" />

</LinearLayout> 